extends layout 

block content
  h1= title

  form(action="", method="POST")
    label(for="title") Title
    input#title(type="text", name="title", required)
    label(for="text") Body
    textarea#text(name="text", required)
    button(type="submit") Submit

  if errors
    ul
      for error in errors
        li!= error.msg